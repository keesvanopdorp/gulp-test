{
    "compilerOptions": {
        "target": "ES6",
        "outDir": "assets/js",
        "lib": [
            "DOM",
            "ES6"
        ],
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
    },
    "include": [
        "**/assets/ts/**.ts"
    ],
    "exclude": [
        "**/node_modules/**/*.ts"
    ]
}